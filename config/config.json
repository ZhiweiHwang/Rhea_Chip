{
	"Comment" : "Config.json helps you easily manage environment specific settings for analysing pipeline...", 
	"Rhea_Chip_dir" : {
        "Comment" : "The path of Rhea_Chip pipeline...",
        "Require" : "YES",
		"PATH" : "/usr/bin/Rhea_Chip"
	},
	"Tools" : {
        "Comment" : "Tools for Rhea_Chip pipeline...",
		"LD_LIBRARY_PATH" : {
            "Comment" : "The library path, contain all tools' lib...",
            "Require" : "NO",
			"PATH" : "/usr/lib:/usr/lib64"
		},
		"SOAPnuke" : {
            "Comment" : "Use for filter adator...",
            "Require" : "YES",
			"PATH" : "/usr/bin/SOAPnuke",
			"Parameters" : "-l 10 -q 0.5 -n 0.1 -G"
		},
		"python" : {
            "Comment" : "Use for gender check, QC, vcf phasing...",
            "Require" : "YES",
			"PATH" : "/usr/bin/python2.7"
		},
		"BWA" : {
            "Comment" : "Use for reads alignment...",
            "Require" : "YES",
			"PATH" : "/usr/bin/bwa",
			"Parameters" : {
                "Comment" : "Suggest: aln for SE reads, mem for PE reads...",
                "Require" : "pick one of two",
				"mem" : "-t 3 -M ",
				"aln" : "-l 16 -t 8"
			}
		},
		"GATK3" : {
            "Comment" : "Use for realign, variation call and filter...",
            "Require" : "YES",
			"PATH" : "/usr/bin/GATK3/GenomeAnalysisTK.jar",
			"Parameters" : {
				"RealignerTargetCreator" : "-nt 8",
				"BaseRecalibrator" : "-nct 8",
				"PrintReads" : "-nct 8",
				"Variation call" : "-nct 8 -stand_call_conf 30.0 -stand_emit_conf 10.0",
				"Variation select" : "-nt 8",
                "combine_variation_select" : " ",
				"snv_filter" : "QD<2.0 || MQ<40.0 || FS>60.0 || HaplotypeScore>13.0 || MQRankSum<-12.5 || ReadPosRankSum<-8.0",
				"indel_filter" : "QD<2.0 || ReadPosRankSum<-20.0 || InbreedingCoeff<-0.8 || FS>200.0"
			}
		},
		"picard" : {
            "Comment" : "Use for sortbam, markdup...",
            "Require" : "YES",
			"PATH" : "/usr/bin/picard"
		},
		"samtools" : {
            "Comment" : "Use for bamfile index...",
            "Require" : "YES",
			"PATH" : "/usr/bin/samtools"
		},
		"JAVA" : {
            "Comment" : "For GATK and picard...",
            "Require" : "YES",
			"PATH" : "/usr/bin/java"
		}
	},
	"Programs" : {
		"bam2gender" : {
			"Comment" : "For Gender recal...",
            "Require" : "YES",
			"PATH" : "bin/bam_to_chip_gender.py"
		},
        "depthqc" : {
        	"Comment" : "For QC, Exon plot...",
            "Require" : "YES",
            "PATH" : "bin/depthQC.py"
        },
		"vcf_phasing" : {
			"Comment" : "Vcf phasing...",
            "Require" : "YES",
			"PATH" : "bin/vcf_phasing.py"
		}
	},
	"Datasets" : {
		"Reference" : {
			"Comment" : "Reference fasta, index is require...",
            "Require" : "YES",
			"male" : "/home/huangzhiwei/hg19/hg19_chM_male_mask.fa",
			"female" : "/home/huangzhiwei/hg19/hg19_chM_female_mask.fa"
		},
		"dbsnp" : {
			"Comment" : "dbsnp file..., you can download it from the GATK resource bundle(ftp://gsapubftp-anonymous@ftp.broadinstitute.org/bundle/2.8/hg19/dbsnp_138.hg19.vcf.gz), it should be tabix index.",
            "Require" : "YES",
			"PATH" : "/home/huangzhiwei/dbsnp_138.vcf.gz"
		},
		"Refseq" : {
			"Comment" : "Refseq file...",
            "Require" : "YES",
			"PATH" : "dataset/hg19.dbref.clean.gz"
		}
	},
	"Personal Analysing" : {
		"Bed" : {
			"Comment" : "region files...",
            "Require" : "NO",
			"Target bed" : "/home/huangzhiwei/Target.bed",
			"Flank bed" : "/home/huangzhiwei/Flank.bed"
		},
		"Trans List" : {
			"Comment" : "Trans List...",
            "Require" : "NO",
			"PATH" : "/home/huangzhiwei/Trans.list"
		},
		"Gene List" : {
			"Comment" : "Gene List...",
            "Require" : "NO",
			"PATH" : "/home/huangzhiwei/Gene.list"
		}
	}
}
